<Window x:Class="CAAgenda1.CrearSprintWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crear Nuevo Sprint" Height="265" Width="406" Name="wCrearSprint">
    <Grid>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="205,24,0,0" Name="tbDuracion" VerticalAlignment="Top" Width="120" />
        <Label Content="Duracion (dias):" Height="28" HorizontalAlignment="Left" Margin="90,24,0,0" Name="lDuracion" VerticalAlignment="Top" />
        <Label Content="Fecha de Inicio:" Height="28" HorizontalAlignment="Left" Margin="90,67,0,0" Name="lFechaInicio" VerticalAlignment="Top" />
        <DatePicker Height="25" HorizontalAlignment="Left" Margin="205,67,0,0" Name="dpFechaIni" VerticalAlignment="Top" Width="115" />
        <Button Content="Crear" Height="23" HorizontalAlignment="Left" Margin="152,148,0,0" Name="bCrear" VerticalAlignment="Top" Width="75" Click="bCrear_Click" />
        <Button Content="Cerrar" Height="23" HorizontalAlignment="Left" Margin="152,191,0,0" Name="bCerrar" VerticalAlignment="Top" Width="75" Click="bCerrar_Click" />
        <Label Content="Objetivo:" Height="28" HorizontalAlignment="Left" Margin="123,114,0,0" Name="lObjetivo" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="205,114,0,0" Name="tbObjetivo" VerticalAlignment="Top" Width="167" />
    </Grid>
</Window>
